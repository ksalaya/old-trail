{
  "name": "old-trail",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "fetch:assets": "node scripts/fetch_assets.mjs",
    "audit:offline": "node scripts/audit_offline.mjs",
    "desktop:dev": "VITE_DEV_SERVER_URL=http://localhost:5173 concurrently -k \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "desktop:dist": "npm run build && electron-builder --mac",
    "prepare": "npm run audit:offline"
  },
  "devDependencies": {
    "concurrently": "^9.0.0",
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3",
    "vite": "^5.4.0",
    "vite-plugin-pwa": "^0.20.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.oldtrail.game",
    "productName": "Old Trail",
    "files": [
      "dist/**",
      "electron/**",
      "package.json"
    ],
    "directories": {
      "buildResources": "build"
    },
    "mac": {
      "category": "public.app-category.games",
      "target": [
        "dmg"
      ]
    },
    "win": {
      "target": [
        "nsis"
      ]
    }
  }
}
